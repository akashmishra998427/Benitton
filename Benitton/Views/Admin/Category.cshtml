                    <div class="panel-body">
                        <div class="ecommerce-table">
                            <div class="table-responsive mt--10">
                                <table id="" class="table data-table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Sr No.</th>
                                            <th>Category</th>
                                            <th>Image</th>
                                            <th>Published</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null)
                                        {
                                            var sr = 0;
                                            foreach (var item in Model)
                                            {

                                                sr = sr + 1;

                                                var switchactdeact = "";
                                                if (item.Isactive == true)
                                                {
                                                    switchactdeact = "checked";
                                                }



                                        <tr>
                                            <td>@sr</td>
                                            <td>@item.title</td>
                                            <td>
                                                <a href="~/@item.image_file" target="_blank" data-bs-toggle="tooltip" data-bs-placement="top" tabindex="0">
                                                    <img src="~/@item.image_file" alt="@item.title" style="height:100px;width:100px;object-fit:contain;border-radius:5%">
                                                </a>
                                            </td>

                                            <td>
                                                <div class="form-check form-switch">

                                                    
                                                    <input class="form-check-input" type="checkbox" role="switch" id="switchercatidss_@item.ID" onchange="switcherActionCat(@item.ID)" @{ @switchactdeact  }>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="form-check form-switch">

                                                    <a href="/Admin/UpdateCategory/@item.ID/1/1" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>
                                                    
                                                </div>
                                            </td>
                                            <!--<td>
    <div class="btn-box">
        <a href="~/Admin/UpdateCategory/@item.ID/Del/1/1" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>-->
                                            @*<a href="~/Admin/DeleteCategory/@item.ID/Del/1/1" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>*@
                                            <!--</div>
    </td>-->
                                        </tr>

                                            }
