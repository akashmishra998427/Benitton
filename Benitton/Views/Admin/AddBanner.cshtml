
@{
    ViewBag.Title = "AddBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="main-content">
    <div class="panel mb-g">
        <div class="panel-heading">
            <h3>
                <div class="col-sm-12 row">
                    <div class="col-sm-4"><a href="/Admin/Banner/1/1" id="" class="btn btn-sm btn-success buttonHideShow"><i class="bi bi-add-square"></i>Cancel</a></div>
                    <div class="col-sm-4">
                        Add Banner
                    </div>
                </div>
            </h3>
        </div>
        <div class="panel-body">
            <form method="post" enctype="multipart/form-data" id="form_AddBanner">
                <input type="hidden" name="ID">
                <div class="row g-3">
                    <div class="col-lg-4">
                        <label for="exampleInputName" class="form-label">Title</label>
                        <br />
                        <br />
                        <input type="text" class="form-control form-control-lg" name="Title" id="Title" value="@Request["Title"]" placeholder="Title" required>
                        @*@Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })*@
                    </div>

                    <div class="col-lg-4">
                        <label for="exampleInputName" class="form-label">Subtitle</label>
                        <br />
                        <br />
                        <input type="text" class="form-control form-control-lg" name="Subtitle" id="Subtitle" value="@Request["Subtitle"]" placeholder="Subtitle" required>
                        @*@Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })*@
                    </div>

                    <div class="col-lg-4">
                        <label for="exampleInputName" class="form-label">image*  File size must be less than 500 KB</label>
                        <div>
                            <img alt="" src="~/assets/Banner/">
                        </div>
                        <input type="file" name="image_file" id="image_file" class="form-control form-control-lg" accept="image/*" required>
                    </div>

                    <div class="col-lg-12">

                        <button type="submit" class="btn btn-lg btn-primary">Submit</button>
                        <a href="" type="reset" class="btn btn-lg btn-secondary">Reset</a>
                    </div>
                </div>

   
                

            </form>

        </div>
    </div>
</div>
