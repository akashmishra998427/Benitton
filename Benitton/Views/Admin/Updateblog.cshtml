@model Tbl_blog
@{
    ViewBag.Title = "Updateblog";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<!-- main-content -->
<div class="main-content">
    <div class="panel mb-g">
        <div class="panel-heading">
            <h3>
                <div class="col-sm-12 row">
                    <div class="col-sm-4"><a href="/Admin/blog/1/1" id="" class="btn btn-sm btn-success "><i class="bi bi-add-square"></i>Cancel</a></div>
                    <div class="col-sm-4">
                        Edit Blog
                    </div>
                </div>
            </h3>
        </div>
        <div class="panel-body">

            <form method="post" enctype="multipart/form-data" id="form_UpdateBlog">
                <input type="hidden" name="Pid" id="Pid" value="@Model.ID">
                <div class="row g-lg-4 g-2 align-items-center">
                    <div class="col-sm-12">
                        <label for="ProductName">Title :</label>
                        <input type="text" id="title" name="title" class="form-control form-control-lg" placeholder="Product Name" value="@Model.title" required>
                    </div>
                    <div class="col-sm-12 mb-15">
                        <label for="ProductDscr"> Description :</label>
                        <textarea name="Detail" id="Detail" rows="3" class="form-control form-control-lg textareaeditor">@Model.detail</textarea>
                    </div>

                    <div class="form-group row g-3">
                        <div class="col-sm-3">
                            <label for="AddProduct">File size must be less than 500 KB :</label>
                            <input type="file" id="image_file" name="image_file" class="form-control form-control-lg" accept="image/*">
                        </div>
                        <div class="col-md-3">

                            @if (@Model.image_file != null)
                            {<a href="~/@Model.image_file" target="_blank"> <img src="~/@Model.image_file" style="height:100px;width:100px;object-fit:contain;"></a>}
                        </div>

                    </div>

                    <div class="col-sm-12  btn-box">
                        <button type="submit" name="save" class="btn btn-lg btn-primary">Submit</button>
                        <button type="reset" class="btn btn-lg btn-secondary">Reset</button>
                    </div>

                </div>
            </form>

        </div>
    </div>

</div>
<!-- main-content -->
