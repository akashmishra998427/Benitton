
@{
    ViewBag.Title = "Service Support";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<!-- main-content -->
<div class="main-content">
    <div class="row">
        @if (TempData["msgErr"] != null)
        {
            <div class="col-md-12 text-center alert alert-danger">
                @TempData["msgErr"].ToString()
            </div>
        }

        @if (TempData["msgSuccess"] != null)
        {
            <div class="col-md-12 text-center alert alert-success">

                @TempData["msgSuccess"].ToString()
            </div>
        }
        <div class="col-xl-12 col-lg-12">
            <div class="panel mb-g">
                <div class="panel-heading">
                    <h3>Sale Service Enquiry</h3>
                </div>
                <div class="panel-body">
                    <div class="ecommerce-table">
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th scope="col">Sr. No.</th>
                                        <th scope="col">Equipment Description</th>
                                        <th scope="col">Equipment Model</th>
                                        <th scope="col">Equipment Make</th>
                                        <th scope="col">Meter Type</th>
                                        <th scope="col">Meter Number</th>
                                        <th scope="col">Serial No</th>
                                        <th scope="col">Site Address</th>
                                        <th scope="col">Company</th>
                                        <th scope="col">Contact Number</th>
                                        <th scope="col">Contact Person</th>
                                        <th scope="col">Nature Problem</th>
                                        <th scope="col">Email Id</th>
                                        <th scope="col">Action Required</th>
                                        <th scope="col">Equipment Status </th>
                                        <th scope="col">Urgency Level</th>
                                        <th scope="col">Upload</th>
                                        <th scope="col">Date</th>


                                        @*<th scope="col">Action</th>*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model != null)
                                    {
                                        var sr = 0;
                                        foreach (var item in Model)
                                        {

                                            sr = sr + 1;
                                            <tr>
                                                <td>@sr</td>

                                                <td>@item.equipment_description</td>
                                                <td>@item.equipment_model</td>
                                                <td>@item.equipment_make</td>
                                                <td>@item.meter_radio</td>
                                                <td>@item.meter_number</td>
                                                <td>@item.serial_no</td>
                                                <td>@item.address</td>
                                                <td>@item.customer_company</td>
                                                <td>@item.complaint_number</td>
                                                <td>@item.contact_person</td>
                                                <td>@item.nature_problem</td>
                                                <td>@item.email</td>
                                                <td>@item.position</td>
                                                <td>@item.problem_type</td>
                                                <td>@item.urgency_level</td>
                                                <td><a href="~/@item.attachment" target="_blank"><img src="~/@item.attachment" style="height:50px;width:50px;object-fit:contain;border-radius:5%" target="_blank"></a></td>
                                                <td>@item.created_at</td>


                                                <td>
                                                    <div class="btn-box">
                                                        @*<a href="~/Admin/AddCategory/@item.ID" class="btn btn-sm btn-success"><i class="bi bi-pencil-square"></i></a>*@
                                                        <a href="~/Admin/DeletePermanentSaleSupport/@item.complaint_id/Del/1/1" onclick="return confirm('Are you sure you want to delete this item?');"  class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                                    </div>
                                                </td>
                                            </tr>

                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan='3'><div class='alert alert-warning'><center>Record not found!</center></div></td></tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- main-content -->
