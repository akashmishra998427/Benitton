@model List<Benitton.Models.Tbl_banner>
@{
    ViewBag.Title = "Banner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class=" main-content">
    <div class="row">
        <div class="col-xl-12 col-lg-12">
            <div class="panel mb-g">
                <div class="panel-heading">
                    <h3>
                        <div class="col-sm-12 row">
                            <div class="col-sm-4"><a href="/Admin/AddBanner/1/1" id="" class="btn btn-sm btn-success buttonHideShow"><i class="bi bi-add-square"></i>Add Banner</a></div>
                        </div>

                    </h3>
                </div>
                <div class="panel-body">

                    @if (TempData["msgErr"] != null)
                    {
                        <div class="col-md-12 text-center alert alert-danger">
                            @TempData["msgErr"].ToString()
                        </div>
                    }

                    @if (TempData["msgSuccess"] != null)
                    {
                        <div class="col-md-12 text-center alert alert-success">

                            @TempData["msgSuccess"].ToString()
                        </div>
                    }
