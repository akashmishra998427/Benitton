                                            <div class="btn-box">
                                                <a href="~/DeleteRecord/@item.ID/tbl_banner/ID" onclick="return confirm('Are you sure you want to delete this item?');" class="btn btn-sm btn-danger"><i class="bi bi-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan='5'><div class='alert alert-warning'><center>Record not found!</center></div></td></tr>
                                    }

                                </table>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
