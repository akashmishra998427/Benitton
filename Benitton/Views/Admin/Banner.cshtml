                                <thead>
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Title</th>
                                        <th>Subtitle</th>
                                        <th>Image</th>
                                       
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <div class="row">
                                        @if (Model != null)
                                        {
                                            var sr = 0;
                                            foreach (var item in Model)
                                            {

                                                sr = sr + 1;
                                                var switchactdeact = "";
                                                if (item.Isactive == true)
                                                {
                                                    switchactdeact = "checked";
                                                }

                                    <tr>
                                        <td>@sr</td>
                                        <td>@item.title</td>
                                        <td>@item.Subtitle</td>
                                        <td>@sr</td>
                                        <td><a href="~/@item.image_file" target="_blank"><img src="~/@item.image_file" style="height:100px;width:100px;object-fit:contain;border-radius:5%"></a></td>


