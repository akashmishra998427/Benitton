            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" role="switch" id="switchercatidss_@item.ID" onchange="ActiveDeactivePro(@item.ID,'tbl_banner','ID')" @{ @switchactdeact  }>
            </div>
        </td>*@
