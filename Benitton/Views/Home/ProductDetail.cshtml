@using System.Text.RegularExpressions
@using System.Data
@model DataSet

@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@foreach (DataRow row in Model.Tables[0].Rows)
{
    <!-- header-start -->
    <section class="page-header">
        <div class="bg-header">
            <div class="container">
                <div class="row">
                    <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-8 mx-auto">
                        <div class="position-relative py-5">
                            <div class="header-heading">
                                <h1>@row["Title"].ToString()</h1>
                                @{

                                    string strText = Regex.Replace(row["Detail"].ToString(), "<(.|\n)*?>", String.Empty);
                                    strText = HttpUtility.HtmlDecode(strText);
                                    strText = Regex.Replace(strText, @"\s+", " ");

                                    var extracontentdot = "";
                                    if (strText.Length >= 100)
                                    {
                                        extracontentdot = "...";
                                        strText = strText.Substring(0, 100).ToString();
                                    }
                                    else
                                    {
                                        strText = strText.ToString();
                                    }
                                    <p>@strText  @extracontentdot</p>
                                    if (strText.Length >= 100)
                                    {
                                        <a href="#viewmore" class="btn btn-sm btn-outline-dark">View More</a>
                                    }

                                }
                            </div>
                            <div class="global-searchbar">
                                <form action="" novalidate class="needs-validation">
                                    <div class="form-group">
                                        <input type="search" class="form-control" id="global-searchbar"
                                               placeholder="Search categories, product, etc." required>
                                        <div class="invalid-feedback">
                                            Please enter keywords.
                                        </div>
                                        <button type="submit" class="btn btn-primary">
                                            <i class='bx bx-search-alt-2'></i>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="app-breadcrumb bg-light">
            <div class="container">
                <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                        <li class="breadcrumb-item"><a href="our-product.html">our product</a></li>
                        <li class="breadcrumb-item"><a href="our-product.html">Faucets</a></li>
                        <li class="breadcrumb-item"><a href="our-product.html">@ViewBag.CatTitle</a></li>
                        <li class="breadcrumb-item"><a href="our-product.html">@ViewBag.SubCatTitle</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@row["Title"].ToString()</li>
                    </ol>
                </nav>
            </div>
        </div>
    </section>
    <!-- header-end -->
    <!-- product-detail-start -->
    <section class="product-descripition">
        <div class="container">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-12">
                            @foreach (DataRow imgrow in Model.Tables[0].Rows)
                            {
                                <div class="product-sliders-imgs">
                                    <div id="carouselExampleIndicators" class="carousel slide">
                                        <div class="position-relative">
                                            <div class="carousel-inner">

                                                <div class="carousel-item active">
                                                    <img src="~/@imgrow["Image_1"]" alt="product-img">

                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/@imgrow["Image_2"]" alt="product-img">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/@imgrow["Image_3"]" alt="product-img">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/@imgrow["Image_4"]" alt="product-img">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/@imgrow["Image_5"]" alt="product-img">
                                                </div>
                                                <div class="carousel-item">
                                                    <img src="~/@imgrow["Image_6"]" alt="product-img">
                                                </div>





                                            </div>
                                            <button class="carousel-control-prev" type="button"
                                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Previous</span>
                                            </button>
                                            <button class="carousel-control-next" type="button"
                                                    data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                                <span class="visually-hidden">Next</span>
                                            </button>
                                        </div>
                                        <!--  -->
                                        <div class="carousel-indicators">
                                            <button type="button" data-bs-target="#carouselExampleIndicators"
                                                    data-bs-slide-to="0" class="active" aria-current="true"
                                                    aria-label="Slide 1">
                                                <img src="~/@imgrow["Image_1"]" alt="product-img">
                                            </button>
                                            <button type="button" data-bs-target="#carouselExampleIndicators"
                                                    data-bs-slide-to="1" aria-label="Slide 2">
                                                <img src="~/@imgrow["Image_2"]" alt="product-img">
                                            </button>
                                            <button type="button" data-bs-target="#carouselExampleIndicators"
                                                    data-bs-slide-to="2" aria-label="Slide 3">
                                                <img src="~/@imgrow["Image_3"]" alt="product-img">
                                            </button>
                                            <button type="button" data-bs-target="#carouselExampleIndicators"
                                                    data-bs-slide-to="3" aria-label="Slide 4">
                                                <img src="~/@imgrow["Image_4"]" alt="product-img">
                                            </button>
                                            <button type="button" data-bs-target="#carouselExampleIndicators"
                                                    data-bs-slide-to="4" aria-label="Slide 5">
                                                <img src="~/@imgrow["Image_5"]" alt="product-img">
                                            </button>
                                            <button type="button" data-bs-target="#carouselExampleIndicators"
                                                    data-bs-slide-to="5" aria-label="Slide 6">
                                                <img src="~/@imgrow["Image_6"]" alt="product-img">
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                            </div>
                        <div class="col-xxl-6 col-xl-6 col-lg-8 col-md-12 offset-lg-1">
                            <div class="product-descripition-tabs">
                                <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link active" id="pills-Description-tab" data-bs-toggle="pill"
                                                data-bs-target="#pills-Description" type="button" role="tab"
                                                aria-controls="pills-Description" aria-selected="true">
                                            Description
                                        </button>
                                    </li>
                                    <li class="nav-item" role="presentation">
                                        <button class="nav-link" id="pills-Contactus-tab" data-bs-toggle="pill"
                                                data-bs-target="#pills-Contactus" type="button" role="tab"
                                                aria-controls="pills-Contactus" aria-selected="false">
                                            Contactus
                                        </button>
                                    </li>
                                </ul>
                                <hr>
                                <div class="tab-content" id="pills-tabContent">
                                    <div class="tab-pane fade show active" id="pills-Description" role="tabpanel"
                                         aria-labelledby="pills-Description-tab" tabindex="0">
                                        <h5 class="card-title">@row["Title"].ToString()</h5>
                                        <p class="card-text">Category : <span>@row["subcatName"].ToString()</span></p>
                                        <p class="card-text">@row["Detail"].ToString()</p>
                                        @*<ul class="product-list-data">
                                            <li>
                                                <p>Unit</p>
                                                <p>@row["Qty"].ToString()</p>
                                            </li>
                                            <li>
                                                <p>Price</p>
                                                <p>Rs. @row["Price"].ToString()</p>
                                            </li>
                                        </ul>*@
                                    </div>
                                    <div class="tab-pane fade" id="pills-Contactus" role="tabpanel"
                                         aria-labelledby="pills-Contactus-tab" tabindex="0">
                                        <form action="" method="post" id="form_AddProductEnq" class="needs-validation" novalidate>
                                            <div class="row row-cols-1 g-3">
                                                <div class="col">
                                                    <input type="hidden" id="product_url" name="product_url" value="@Request.Url.AbsoluteUri.ToString().Replace(" ", "-")">
                                                    <input style="display:none;" type="text" value="@row["Title"].ToString()" name="" id="product_title" class="form-control" required>
                                                    <label for="fullName" class="form-label">
                                                        full
                                                        Name<span>*</span>
                                                    </label>
                                                    <input type="text" name="" id="contact_name" class="form-control"
                                                           required>
                                                </div>
                                                <div class="col">
                                                    <label for="Subject"
                                                           class="form-label">Subject<span>*</span></label>
                                                    <input type="text" name="" id="message_detail" class="form-control"
                                                           required>
                                                </div>
                                                <div class="col">
                                                    <label for="number" class="form-label">
                                                        Mobile
                                                        Number<span>*</span>
                                                    </label>
                                                    <input type="text" name="" id="mobile" class="form-control"
                                                           required>
                                                </div>
                                                <div class="col">
                                                    <label for="Email" class="form-label">Email<span>*</span></label>
                                                    <input type="email" name="" id="email" class="form-control"
                                                           required>
                                                </div>
                                                <div class="col">
                                                    <label for="state" class="form-label">state<span>*</span></label>
                                                    <input type="text" name="" id="state" class="form-control" required>
                                                </div>
                                                <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-12">
                                                    <button type="submit" class="btn btn-success w-100">submit</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- product-detail-end -->
    <!-- Category-start -->
    <section class="related-products">
        <div class="container">
            <h1>Related Products</h1>
            <div class="owl-carousel">

                @{
                    foreach (DataRow Relrow in Model.Tables[1].Rows)
                    {
                        if (ViewBag.Message == Relrow["Title"]) { }
                        else
                        {
                                <div class="item">
                                <div class="card">
                                                    <div class="card-body">
                                                     <div class="product-img">
                                 @if (row["home_image"] != null)
                                                        {
                                                            <img src='~/@Relrow["home_image"]' alt="@Relrow["Title"]" class="img-fluid">
                                                        }
                                                        else
                                                        {
                                                            <img src="~/@Relrow["Image_1"]" class="card-img-top" alt="@Relrow["Title"]">
                                                        }

                            </div>
                                                       
                                                        <h5 class="card-title">@Relrow["Title"]</h5>

                                                        <a href="~/@ViewBag.CatTitle/@ViewBag.SubCatTitle/@row["Title"].ToString().Replace(" ", "-")" class="btn btn-primary btn-sm stretched-link">View details</a>

                                                    </div>
                                </div>
                                </div>
                        }
                    }
                 }



                
            </div>
                            </div>
</section>
    <!-- Category-end -->
}