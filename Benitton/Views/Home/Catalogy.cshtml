<!-- header-start -->
<section class="page-header">
    <div class="bg-header">
        <div class="container">
            <div class="row">
                <div class="col-xxl-5 col-xl-5 col-lg-5 col-md-8 mx-auto">
                    <div class="position-relative py-5">
                        <div class="header-heading">
                            <h1>@ViewBag.Title</h1>
                            <p>@ViewBag.Message</p>
                        </div>
                        <div class="global-searchbar">
                            <form action="" novalidate class="needs-validation">
                                <div class="form-group">
                                    <input type="search" class="form-control" id="global-searchbar"
                                           placeholder="Search categories, product, etc." required>
                                    <div class="invalid-feedback">
                                        Please enter keywords.
                                    </div>
                                    <button type="submit" class="btn btn-primary">
                                        <i class='bx bx-search-alt-2'></i>
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="app-breadcrumb bg-light">
        <div class="container">
            <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item"><a href="our-product.html">our product</a></li>
                    <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<!-- header-end -->
